<div id="portfolio" class="paddsection">

    <div class="container">
        <div class="section-title text-center">
            <a href="/project">
                <h2>My Portfolio</h2>
            </a>
        </div>
    </div>

    <div class="container">

        <div class="row portfolio-container">
            <% for(let project of projects){ %>
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <a href="/project/<%=project._id%>"><img src=<%=project.thumbnail[0].mini %>
                        class="img-fluid"
                        alt=""></a>
                    <div class="portfolio-info">
                        <h4>
                            <%=project.title%>
                        </h4>
                        <p>
                            <%=project.category%>
                        </p>

                        <a href=<%=project.thumbnail[0].mini%> data-gallery="portfolioGallery"
                            class="portfolio-lightbox preview-link" title=<%=project.category%>><i
                                    class="bx bx-plus"></i></a>
                        <a href='/project/<%=project._id %>' class="details-link" title=<%=project.description%>><i
                                class="bx bx-link"></i></a>
                    </div>
                </div>

                <% } %>


        </div>

    </div>

</div><!-- End Portfolio Section -->